#:kivy 2.3.0

<RegisterScreen>:
    label_judul: label_judul
    input_email: input_email
    input_password: input_password
    input_alamat: input_alamat
    input_noHp: input_noHp
    tombol_daftar: tombol_daftar

    Label:
        id: label_judul
        text: "SISTEM DIGITAL TOKO TERPADU"
        size_hint_y: None
        height: 40
        font_size: '20sp'
        color: 0, 0, 0, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, 0.4
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        padding: 10
        spacing: 10

        Label:
            text: 'Email'
            size_hint_y: None
            height: 40
            color: 0, 0, 0, 1
            halign: 'left'
            text_size: self.size

        TextInput:
            id: input_email
            hint_text: 'Masukkan Email'
            size_hint_y: None
            height: 40
            multiline: False

        Label:
            text: 'Password'
            size_hint_y: None
            height: 40
            color: 0, 0, 0, 1
            halign: 'left'
            text_size: self.size

        TextInput:
            id: input_password
            hint_text: 'Masukkan Password'
            size_hint_y: None
            height: 40
            password: True
            multiline: False

        Label:
            text: 'Alamat'
            size_hint_y: None
            height: 40
            color: 0, 0, 0, 1
            halign: 'left'
            text_size: self.size

        TextInput:
            id: input_alamat
            hint_text: 'Masukkan Alamat'
            size_hint_y: None
            height: 40
            multiline: False

        Label:
            text: 'No HP'
            size_hint_y: None
            height: 40
            color: 0, 0, 0, 1
            halign: 'left'
            text_size: self.size

        TextInput:
            id: input_noHp
            hint_text: 'Masukkan No Hp'
            size_hint_y: None
            height: 40
            multiline: False

        Button:
            on_release: 
                root.register(input_email.text, input_password.text, input_alamat.text, input_noHp.text)
            id: tombol_daftar
            text: 'Daftar'
            size_hint_y: None
            height: 50
            background_normal: ''  # Allow background_color to take effect
            background_color: 0.396, 0.333, 0.561, 1
