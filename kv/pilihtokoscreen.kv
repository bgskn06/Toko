#:kivy 2.3.0

<PilihTokoScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Pencarian dan ikon
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '45dp'
            padding: [10]
            spacing: 10

            TextInput:
                id: input_barang
                hint_text: 'Cari...'
                size_hint_x: 0.15
                multiline: False
                pos_hint: {'center_y': 0.5}

            Button:
                size_hint: None, None
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/cari.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '20dp'
                    height: '20dp'
                    center: self.parent.center

            Button:
                size_hint: None, None
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/keranjang.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '20dp'
                    height: '20dp'
                    center: self.parent.center

            Button:
                size_hint: None, None
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/pesan.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '20dp'
                    height: '20dp'
                    center: self.parent.center

        # ScrollView untuk konten yang bisa di-scroll
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                padding: [10, 10]
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

                # GridLayout untuk menambahkan elemen dengan gambar dan teks
                GridLayout:
                    cols: 3  # Atur jumlah kolom dalam grid
                    row_default_height: 150
                    row_force_default: True
                    size_hint_y: None
                    height: self.minimum_height  # Sesuaikan tinggi berdasarkan elemen di dalamnya
                    padding: 10
                    spacing: 10

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        canvas.before:
                            Color:
                                rgb: 0, 0, 0  # Warna border hitam
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                        Image:
                            source: 'product1.png'
                            size_hint: None, None
                            size: 100, 100

                        Label:
                            text: 'Produk 1'
                            color: 0, 0, 0, 1
                            halign: 'center'
                            valign: 'center'
                            text_size: self.size

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        canvas.before:
                            Color:
                                rgb: 0, 0, 0  # Warna border hitam
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                        Image:
                            source: 'product2.png'
                            size_hint: None, None
                            size: 100, 100

                        Label:
                            text: 'Produk 2'
                            color: 0, 0, 0, 1
                            halign: 'center'
                            valign: 'center'
                            text_size: self.size

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        canvas.before:
                            Color:
                                rgb: 0, 0, 0  # Warna border hitam
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                        Image:
                            source: 'product3.png'
                            size_hint: None, None
                            size: 100, 100

                        Label:
                            text: 'Produk 3'
                            color: 0, 0, 0, 1
                            halign: 'center'
                            valign: 'center'
                            text_size: self.size

                    BoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        canvas.before:
                            Color:
                                rgb: 0, 0, 0  # Warna border hitam
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                        Image:
                            source: 'product4.png'
                            size_hint: None, None
                            size: 100, 100

                        Label:
                            text: 'Produk 4'
                            color: 0, 0, 0, 1
                            halign: 'center'
                            valign: 'center'
                            text_size: self.size

                        # Tambahkan lebih banyak konten jika diperlukan

        # Navigasi Bawah
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [20, 20]  
            spacing: 10        

            Button:
                on_press: 
                    print("Tombol Home")
                    app.root.current = 'home'
