#:kivy 2.3.0

<PilihTokoScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Pencarian dan ikon
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '45dp'
            padding: [10]
            spacing: 10

            TextInput:
                id: input_barang
                hint_text: 'Cari...'
                size_hint_x: 0.15
                multiline: False
                pos_hint: {'center_y': 0.5}

            Button:
                size_hint: None, None
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/cari.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '20dp'
                    height: '20dp'
                    center: self.parent.center

            Button:
                size_hint: None, None
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/keranjang.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '20dp'
                    height: '20dp'
                    center: self.parent.center

            Button:
                size_hint: None, None
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/pesan.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '20dp'
                    height: '20dp'
                    center: self.parent.center

        # ScrollView untuk konten yang bisa di-scroll
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                padding: [10, 10]
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

                # GridLayout untuk menambahkan elemen dengan gambar dan teks
                GridLayout:
                    id: product_list  # ID baru yang akan digunakan untuk menampung produk
                    cols: 3  # Atur jumlah kolom dalam grid
                    row_default_height: 200
                    row_force_default: True
                    size_hint_y: None
                    height: self.minimum_height  # Sesuaikan tinggi berdasarkan elemen di dalamnya
                    padding: 10
                    spacing: 10

                    # Contoh produk (ini bisa digantikan dengan widget produk dinamis dari database)
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 10
                        canvas.before:
                            Color:
                                rgb: 0, 0, 0  # Warna border hitam
                            Line:
                                width: 1.5
                                rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10
                        
                        Button:
                            on_press: 
                                print("Tombol Pilih")
                                app.root.current = "detail"
                                root.selected_user_id = 'user_123'  # Set `created_by` atau `selected_user_id` berdasarkan yang dipilih
                            text: 'Pilih'
                            size_hint_y: None
                            height: '30dp'

        # Navigasi Bawah
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [20, 20]  
            spacing: 10        

            Button:
                on_press: 
                    print("Tombol Home")
                    app.root.current = 'home'
                size_hint: None, None
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/home.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center
            Button:
                on_press: 
                    print("Tombol Toko")
                    app.root.current = 'toko'
                size_hint: None, None
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/toko.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center

            Button:
                on_press: 
                    print("Tombol Histori")
                    app.root.current = "pesanan"
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/histori.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center
            
            Button:
                on_press: 
                    print("Tombol Akun")
                    app.root.current = "akun"
                size_hint: None, None
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/logo.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center
