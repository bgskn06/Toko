#:kivy 2.3.0
<PilihTokoScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        pos_hint: {'top': 1}
        size_hint_y: None
        height: self.minimum_height  # Dinamis menyesuaikan dengan konten

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 70
            padding: 10

            canvas.before:
                Color:
                    rgb: 0, 0, 0  # Border color
                Line:
                    width: 0.5
                    rectangle: self.x, self.y, self.width, self.height

            Image:
                source: 'logo.png'
                size_hint: None, None
                size: 50, 50
                padding: 10
                background_normal: ''

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 50

                Label:
                    text: '[b]Toko A[/b]'  # Nama toko bold menggunakan markup
                    markup: True  # Aktifkan markup
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'center'
                    text_size: self.size  # Buat teks mengikuti ukuran label
                    padding_x: 10  # Tambahkan padding kiri untuk teks

                Label:
                    text: 'Alamat Toko A'
                    color: 0, 0, 0, 1
                    halign: 'left'
                    valign: 'center'
                    text_size: self.size  # Buat teks mengikuti ukuran label
                    padding_x: 10  # Tambahkan padding kiri untuk teks

        # Kolom Pencarian di bawah BoxLayout
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: 10

            TextInput:
                hint_text: "Cari produk..."
                size_hint_x: 0.9  # Lebar kolom pencarian
                multiline: False  # Nonaktifkan multiline agar sesuai untuk pencarian
                padding_x: 10  # Tambahkan padding kiri dan kanan untuk estetika

            Button:
                text: "Cari"
                size_hint_x: 0.1  # Lebar tombol cari

        # GridLayout untuk menambahkan elemen dengan gambar dan teks
        GridLayout:
            cols: 3  # Atur jumlah kolom dalam grid
            row_default_height: 150
            row_force_default: True
            size_hint_y: None
            height: self.minimum_height  # Sesuaikan tinggi berdasarkan elemen di dalamnya
            padding: 10
            spacing: 10

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                canvas.before:
                    Color:
                        rgb: 0, 0, 0  # Warna border hitam
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                Image:
                    source: 'product1.png'
                    size_hint: None, None
                    size: 100, 100

                Label:
                    text: 'Produk 1'
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'center'
                    text_size: self.size

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                canvas.before:
                    Color:
                        rgb: 0, 0, 0  # Warna border hitam
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                Image:
                    source: 'product2.png'
                    size_hint: None, None
                    size: 100, 100

                Label:
                    text: 'Produk 2'
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'center'
                    text_size: self.size

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                canvas.before:
                    Color:
                        rgb: 0, 0, 0  # Warna border hitam
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                Image:
                    source: 'product3.png'
                    size_hint: None, None
                    size: 100, 100

                Label:
                    text: 'Produk 3'
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'center'
                    text_size: self.size

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                canvas.before:
                    Color:
                        rgb: 0, 0, 0  # Warna border hitam
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 10)  # Border melengkung dengan radius 10

                Image:
                    source: 'product4.png'
                    size_hint: None, None
                    size: 100, 100

                Label:
                    text: 'Produk 4'
                    color: 0, 0, 0, 1
                    halign: 'center'
                    valign: 'center'
                    text_size: self.size

        # Navbar di bagian bawah layar
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 70
        padding: 10
        spacing: 10

        canvas.before:
            Color:
                rgba: 0.2, 0.6, 0.8, 1  # Warna latar belakang navbar (biru muda, bisa diganti sesuai selera)
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: "Home"
            size_hint_x: 0.25  # Setiap tombol memiliki lebar yang sama
            on_press: app.on_home_pressed()  # Contoh aksi saat tombol ditekan

        Button:
            text: "Kategori"
            size_hint_x: 0.25
            on_press: app.on_kategori_pressed()

        Button:
            text: "Favorit"
            size_hint_x: 0.25
            on_press: app.on_favorit_pressed()

        Button:
            text: "Akun"
            size_hint_x: 0.25
            on_press: app.on_akun_pressed()
