#:kivy 2.3.0
<DetailScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10, 10, 10]
        spacing: 10

        # Label untuk nama produk
        Label:
            id: product_name_label
            text: "Nama Produk"
            font_size: '18sp'
            color: 0, 0, 0, 1

        # Label untuk harga produk
        Label:
            id: product_price_label
            text: "Harga: Rp 0"
            font_size: '16sp'
            color: 0, 0, 0, 1

        # AsyncImage untuk gambar produk
        AsyncImage:
            id: product_image
            source: 'assets/default_image.png'
            size_hint: None, None
            size: (200, 200)
            allow_stretch: True
            keep_ratio: True

        # Label untuk informasi stok produk
        Label:
            id: product_stock_label
            text: "Stok: 0"
            font_size: '16sp'
            color: 0, 0, 0, 1

        # Tombol untuk chat atau pesan
        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10
            Button:
                text: 'Chat Penjual'
                on_press: print("Chat Penjual ditekan")
            Button:
                text: 'Pesan'
                on_press: print("Pesan ditekan")
                
        # Navigasi Bawah
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            padding: [20, 20]  
            spacing: 10        

            Button:
                on_press: 
                    print("Tombol Home")
                    app.root.current = 'home'
                size_hint: None, None
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/home.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center

            Button:
                on_press: 
                    print("Tombol Toko")
                    app.root.current = 'toko'
                size_hint: None, None
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/toko.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center

            Button:
                on_press: 
                    print("Tombol Histori")
                    app.root.current = "pesanan"
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/histori.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center
            
            Button:
                on_press: 
                    print("Tombol Akun")
                    app.root.current = "akun"
                size_hint: None, None
                size_hint_x: 1
                width: '30dp'
                height: '30dp'
                background_normal: ''
                Image:
                    source: 'asset/logo.png'
                    keep_ratio: True
                    allow_stretch: False
                    size_hint: None, None
                    width: '25dp'
                    height: '25dp'
                    center: self.parent.center
